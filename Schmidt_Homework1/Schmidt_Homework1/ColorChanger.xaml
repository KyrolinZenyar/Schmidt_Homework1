<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schmidt_Homework1.ColorChanger">
    <ContentPage.Content>
        <StackLayout>
            <!-- Place new controls here -->
            <Entry x:Name="colorText"
                   Text="Tap to Change Color" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="20,20,20,20" 
                   WidthRequest="950"/>
            <Button x:Name="colorChangerButton"
                    Text="Change Color"
                    Clicked="ChangeColor"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>